<% if current_user.try(:admin?) %>

<h1>Listing comics</h1>

<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Chapters</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr data-item-id=<%= "#{comic.id}" %> class="item">
        <td><%= comic.title %></td>
        <td><%= Chapter.all.select { |t| t.comic == comic }.count %></td>
        <td><%= comic.description %></td>
        <td><%= link_to 'Show', comic, :class => 'btn btn-default pull-right' %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comic', new_comic_path %>

<% else %>

<div class="page-header">
  <h1>Welcome! <small>Our Wonderful Comics</small></h1>
</div>
<p>You like webcomics? Well, we've got 'em.</p>

  <div class="row">

	<% @comics.each do |comic| %>

	  <div class="col-xs-6 col-md-4">
			 
      
		
		  <div class="text-center" style="margin-bottom:50px;">
		    <%= image_tag "#{comic.cover}", :class => "img-responsive center-block embed-responsive-item img-thumbnail", :data => {:toggle=>"popover", :trigger=>"click", :content=>"#{comic.description}<br>#{link_to comic.title, comic, :class => 'btn btn-primary btn-block', :style => 'margin-top:10px;'}", :placement=>"top"}, :title => comic.title %>
		  </div>
		

		 	
 	  </div>

    <% end %>
    
  </div>

<% end %>