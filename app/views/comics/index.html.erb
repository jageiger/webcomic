<% if user_signed_in? %>

<h1>Listing comics</h1>

<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Chapters</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr data-item-id=<%= "#{comic.id}" %> class="item">
        <td><%= comic.title %></td>
        <td><%= comic.num_chapters %></td>
        <td><%= comic.description %></td>
        <td><%= link_to 'Show', comic, :class => 'btn btn-default pull-right' %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comic', new_comic_path %>

<% else %>

Not logged in.

<% end %>