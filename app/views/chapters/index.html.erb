<div class="page-header text-center" style="">
  <h1><%= @comic.title %> Chapters</h1>
</div>

<table class="table table-hover table-striped" id="sortable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr data-item-id=<%= "#{chapter.id}" %> class="item">
        <td><%= chapter.title %></td>
        <td><%= chapter.description %></td>
        <td><%= Page.all.select { |t| t.chapter == chapter }.count %></td>
        <td><%= link_to 'Show', chapter %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chapter', new_chapter_path %>
