<h1>Listing assignments</h1>

<% if current_user.admin? %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comic</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr><% user = User.find_by_id(assignment.user_id) %>
        <td><%= user.first %> <%= user.last %></td>
        <td><%= assignment.comic_id %></td>
        <td><%= assignment.role %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comic</th>
      <th>Role</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
	<% @assignments = @assignments.select { |t| t.user_id == current_user.id } %>
    <% @assignments.each do |assignment| %>
      <tr><% user = User.find_by_id(assignment.user_id) %>
        <td><%= user.first %> <%= user.last %></td>
        <td><%= assignment.comic_id %></td>
        <td><%= assignment.role %></td>
        <td><%= link_to 'Show', assignment %></td>
      </tr>
    <% end %>
  </tbody>
</table>